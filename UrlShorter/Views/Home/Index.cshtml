<div class="container mt-5">
    <div style="display: flex;">
        <h2>URL Entries</h2>
        <button class="btn btn-primary mb-3" onclick="showAddModal()" style="margin-left:auto;">Add URL</button>
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th style="width:20%;">Long URL</th>
                <th>Short URL</th>
                <th>Created At</th>
                <th>Click Count</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="urlTableBody">
        </tbody>
    </table>
</div>

<div class="modal" id="urlModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h4 class="modal-title" id="modalTitle">Add URL</h4>
                <button type="button" class="close" data-dismiss="modal" onclick="closeModal()">&times;</button>
            </div>

            <div class="modal-body">
                <form id="urlForm">
                    <input type="hidden" id="urlId">
                    <div class="form-group">
                        <label for="longUrl">Long URL:</label>
                        <input type="text" class="form-control" id="longUrl" required>
                    </div>
                    <button type="submit" class="btn btn-success" style="margin-top: 14px;">Save</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="~/js/url-entry-table.js"></script>
}
